rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow anyone logged in to read their own settings
    	allow read: if request.auth != null && request.auth.uid == userId;
      // Allow create and update if logged in
      // Don't allow changes to: roleAdmin
      allow create, update: if request.auth != null && request.auth.uid == userId && !('roleAdmin' in request.resource.data);
			// Allow admins full read/write
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleAdmin == true;
    }
  }
}